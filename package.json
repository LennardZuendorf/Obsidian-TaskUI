{
	"name": "shards-taskui",
	"version": "0.0.1",
	"description": "Shards TaskUI helps users visually manage tasks by extending the popular tasks plugin.",
	"main": "main.js",
	"scripts": {
		"build:css": "npx tailwindcss -i ./src/styles.css -o ./build/shards-taskui/styles.css --minify",
		"dev:css": "npx tailwindcss -i ./src/styles.css -o ./styles.css --watch",
		"build:js": "node esbuild.config.mjs --production",
		"dev:js": "node esbuild.config.mjs",
		"lint": "eslint ./src --fix",
		"format": "prettier ./src --write",
		"version": "node ./build/version-bump.mjs",
		"dev": "npm run dev:css & npm run dev:js && npx rimraf main.css",
		"build": "npm run lint && npm run format && node esbuild.config.mjs --production && npm run build:css && npx cpy manifest.json build/shards-taskui && rm build/shards-taskui/main.css",
		"release": "npm run build && npm run version"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^16.11.6",
		"@types/react": "^18.3.11",
		"@types/react-dom": "^18.3.1",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"autoprefixer": "^10.4.20",
		"builtin-modules": "3.3.0",
		"cpy-cli": "^5.0.0",
		"esbuild": "0.24.0",
		"esbuild-plugin-tailwindcss": "^1.2.1",
		"eslint-config-prettier": "^9.1.0",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"obsidian": "^1.7.2",
		"postcss": "^8.4.47",
		"prettier": "3.3.3",
		"tailwindcss": "^3.4.14",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	},
	"dependencies": {
		"@headlessui/react": "^2.1.10",
		"@radix-ui/react-icons": "^1.3.0",
		"@radix-ui/react-tabs": "^1.1.1",
		"pino": "^9.5.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix",
			"prettier --write",
			"git add"
		],
		"*.ts": [
			"eslint --fix",
			"prettier --write",
			"git add"
		],
		"*.tsx": [
			"eslint --fix",
			"prettier --write",
			"git add"
		]
	}
}
