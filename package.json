{
	"name": "shards-taskui",
	"version": "0.0.1",
	"description": "Shards TaskUI helps users visually manage tasks by extending the popular tasks plugin.",
	"main": "main.js",
	"scripts": {
		"lint": "eslint ./src --fix",
		"format": "prettier ./src --write",
		"version": "node ./build/version-bump.mjs",
		"dev": "npx cpy manifest.json build/taskui-plugin && node esbuild.config.mjs",
		"build": "npm run format && node esbuild.config.mjs --production && npx cpy manifest.json build/taskui-plugin && rm build/taskui-plugin/main.css && rm build/taskui-plugin/styles.js",
		"build-release": "npm run build && npm run version",
		"lint-staged": "lint-staged"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^16.11.6",
		"@types/react": "^18.3.11",
		"@types/react-dom": "^18.3.1",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"autoprefixer": "^10.4.20",
		"builtin-modules": "3.3.0",
		"cpy-cli": "^5.0.0",
		"esbuild": "0.24.0",
		"esbuild-plugin-tailwindcss": "^1.2.1",
		"eslint-config-prettier": "^9.1.0",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"obsidian": "^1.7.2",
		"obsidian-dataview": "^0.5.64",
		"postcss": "^8.4.47",
		"prettier": "3.3.3",
		"tailwindcss": "^3.4.14",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	},
	"dependencies": {
		"@headlessui/react": "^2.1.10",
		"@ophidian/core": "0.0.24",
		"@radix-ui/react-dropdown-menu": "^2.1.2",
		"@radix-ui/react-icons": "^1.3.0",
		"@radix-ui/react-label": "^2.1.0",
		"@radix-ui/react-slot": "^1.1.0",
		"@radix-ui/react-tabs": "^1.1.1",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.1.1",
		"date-fns": "^4.1.0",
		"esbuild-style-plugin": "^1.6.3",
		"events": "^3.3.0",
		"jotai": "^2.10.1",
		"jotai-devtools": "^0.10.1",
		"jotai-effect": "^2.0.2",
		"lodash": "^4.17.21",
		"lucide-react": "^0.453.0",
		"pino": "^9.5.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-label": "^0.0.6",
		"tailwind-merge": "^2.5.4",
		"tailwindcss-animate": "^1.0.7",
		"ts-randomstring": "^1.0.8",
		"zod": "^3.24.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix",
			"prettier --write"
		],
		"*.ts": [
			"eslint --fix",
			"prettier --write"
		],
		"*.tsx": [
			"eslint --fix",
			"prettier --write"
		]
	}
}
